<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Hudan Hidayat Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <%- include('head_config') %>
</head>

<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <%- include('sidebar', { title: 'Dashboard' }) %>

            <!-- Main Content -->
            <main class="flex-1 overflow-y-auto p-8">
                <h1 class="text-3xl font-bold mb-8 text-gray-800">Dashboard</h1>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                    <div class="bg-white p-6 rounded shadow-sm border border-gray-100">
                        <h3 class="text-gray-500 text-sm font-semibold uppercase">Total Views</h3>
                        <p class="text-3xl font-bold text-gray-800 mt-2">
                            <%= stats ? stats.total : 0 %>
                        </p>
                    </div>
                    <div class="bg-white p-6 rounded shadow-sm border border-gray-100">
                        <h3 class="text-gray-500 text-sm font-semibold uppercase">Views Today</h3>
                        <p class="text-3xl font-bold text-salihara-red mt-2">
                            <%= stats ? stats.today : 0 %>
                        </p>
                    </div>
                    <div class="bg-white p-6 rounded shadow-sm border border-gray-100">
                        <h3 class="text-gray-500 text-sm font-semibold uppercase">Total Esai</h3>
                        <p class="text-3xl font-bold text-gray-800 mt-2">
                            <%= typeof esaiCount !=='undefined' ? esaiCount : 0 %>
                        </p>
                    </div>
                    <div class="bg-white p-6 rounded shadow-sm border border-gray-100">
                        <h3 class="text-gray-500 text-sm font-semibold uppercase">Total Novel</h3>
                        <p class="text-3xl font-bold text-gray-800 mt-2">
                            <%= typeof novelCount !=='undefined' ? novelCount : 0 %>
                        </p>
                    </div>
                </div>

                <!-- Charts & Tables -->
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Main Chart -->
                    <div class="lg:col-span-2 bg-white p-6 rounded shadow-sm border border-gray-100">
                        <h3 class="text-lg font-bold text-gray-800 mb-4">Traffic Overview (Last 7 Days)</h3>
                        <canvas id="trafficChart"></canvas>
                    </div>

                    <!-- Top Content & Locations Stack -->
                    <div class="space-y-6">
                        <!-- Top Content -->
                        <div class="bg-white p-6 rounded shadow-sm border border-gray-100">
                            <h3 class="text-lg font-bold text-gray-800 mb-4">Top Content</h3>
                            <ul class="space-y-4">
                                <% if (stats && stats.topPages && stats.topPages.length> 0) { %>
                                    <% stats.topPages.forEach(page=> { %>
                                        <li class="flex justify-between items-center border-b border-gray-50 pb-2">
                                            <span class="text-sm text-gray-600 truncate max-w-[200px]"
                                                title="<%= page.path %>">
                                                <%= page.path %>
                                            </span>
                                            <span class="font-bold text-gray-800">
                                                <%= page.views %>
                                            </span>
                                        </li>
                                        <% }); %>
                                            <% } else { %>
                                                <li class="text-gray-500 text-sm">No data yet.</li>
                                                <% } %>
                            </ul>
                        </div>

                        <!-- Top Regions / Cities -->
                        <div class="bg-white p-6 rounded shadow-sm border border-gray-100">
                            <h3 class="text-lg font-bold text-gray-800 mb-4">Top Regions / Cities</h3>
                            <ul class="space-y-4">
                                <% if (stats && stats.locations && stats.locations.length> 0) { %>
                                    <% stats.locations.forEach(loc=> { %>
                                        <li class="flex justify-between items-center border-b border-gray-50 pb-2">
                                            <span class="text-sm text-gray-600">
                                                <%= loc.location %>
                                            </span>
                                            <span class="font-bold text-gray-800">
                                                <%= loc.count %>
                                            </span>
                                        </li>
                                        <% }); %>
                                            <% } else { %>
                                                <li class="text-gray-500 text-sm">No location data yet.</li>
                                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Chart Config -->
                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                <script>
                    // Prepare chart data from server
                    const chartLabels = <% - JSON.stringify(stats ? stats.chartLabels : []) %>;
                    const chartValues = <% - JSON.stringify(stats ? stats.chartValues : []) %>;

                    // Initialize Chart.js
                    const ctx = document.getElementById('trafficChart').getContext('2d');
                    const trafficChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: chartLabels,
                            datasets: [{
                                label: 'Page Views',
                                data: chartValues,
                                borderColor: '#E45046',
                                backgroundColor: 'rgba(228, 80, 70, 0.1)',
                                tension: 0.4,
                                fill: true
                            }]
                        },
                        options: {
                            responsive: true,
                            plugins: {
                                legend: { display: false }
                            },
                            scales: {
                                y: { beginAtZero: true }
                            }
                        }
                    });
                </script>
            </main>
    </div>
</body>

</html>