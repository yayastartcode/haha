<%- include('partials/header') %>

    <main class="py-12 md:py-20 px-6 md:px-12 max-w-7xl mx-auto">
        <div class="mb-12 text-center md:text-left">
            <h1 class="text-4xl font-serif text-salihara-dark mb-4 border-b-2 border-salihara-red inline-block pb-2">
                <%= title %>
            </h1>
            <p class="text-gray-500 text-sm uppercase tracking-widest">Archive</p>
        </div>

        <% if (items.length===0) { %>
            <div class="text-center py-20 bg-gray-50 rounded">
                <p class="text-gray-500">Belum ada konten untuk kategori ini.</p>
                <a href="/" class="mt-4 inline-block text-salihara-red hover:underline">&larr; Kembali ke Beranda</a>
            </div>
            <% } else { %>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <% items.forEach(item=> { %>
                        <a href="/<%= category %>/<%= item.id %>" class="group block">
                            <div
                                class="<%= category === 'novel' ? 'aspect-[3/4]' : (category === 'esai' || category === 'puisi' ? 'aspect-[4/3]' : 'aspect-video') %> bg-gray-100 mb-4 overflow-hidden rounded relative">
                                <% if (item.image_url) { %>
                                    <img src="<%= item.image_url %>" alt="<%= item.title %>"
                                        class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                                    <% } else { %>
                                        <div
                                            class="w-full h-full flex items-center justify-center bg-gray-200 text-gray-400">
                                            <span class="text-xs uppercase tracking-widest">No Image</span>
                                        </div>
                                        <% } %>
                            </div>
                            <div class="flex items-center text-xs text-gray-400 mb-2 space-x-2">
                                <span>
                                    <%= new Date(item.created_at).toLocaleDateString('id-ID', { year: 'numeric' ,
                                        month: 'long' , day: 'numeric' }) %>
                                </span>
                                <% if (category !=='gallery' ) { %>
                                    <span>&bull;</span>
                                    <span class="uppercase text-salihara-red font-bold">Read More</span>
                                    <% } %>
                            </div>
                            <h3
                                class="text-lg font-bold text-gray-800 group-hover:text-salihara-red leading-tight transition">
                                <%= item.title || item.caption %>
                            </h3>
                        </a>
                        <% }); %>
                </div>
                <% } %>
    </main>

    <%- include('partials/footer') %>