<%- include('partials/header') %>

    <main class="py-8 md:py-16 px-6 md:px-12 max-w-4xl mx-auto">

        <!-- Breadcrumb -->
        <nav class="flex mb-8 text-xs md:text-sm text-gray-500 uppercase tracking-widest font-semibold"
            aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-2">
                <li class="inline-flex items-center">
                    <a href="/" class="hover:text-salihara-red transition">Home</a>
                </li>
                <li>
                    <div class="flex items-center">
                        <span class="mx-2 text-gray-300">/</span>
                        <a href="/<%= category %>" class="hover:text-salihara-red transition">
                            <%= categoryTitle %>
                        </a>
                    </div>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <span class="mx-2 text-gray-300">/</span>
                        <span class="text-gray-800 line-clamp-1">
                            <%= item.title %>
                        </span>
                    </div>
                </li>
            </ol>
        </nav>

        <!-- Content Header -->
        <article class="mb-12">
            <h1 class="text-3xl md:text-5xl font-serif text-gray-900 leading-tight mb-6">
                <%= item.title %>
            </h1>

            <div class="flex flex-col md:flex-row md:items-center justify-between border-y border-gray-100 py-4 mb-8">
                <div class="text-sm text-gray-500 mb-4 md:mb-0">
                    Posted on <span class="font-bold text-gray-800">
                        <%= new Date(item.created_at).toLocaleDateString('id-ID', { weekday: 'long' , year: 'numeric' ,
                            month: 'long' , day: 'numeric' }) %>
                    </span>
                </div>

                <!-- Social Share Buttons -->
                <div class="flex items-center space-x-3">
                    <span class="text-xs uppercase tracking-widest text-gray-400 mr-2">Share:</span>

                    <!-- WhatsApp -->
                    <a href="https://wa.me/?text=<%= encodeURIComponent(item.title + ' ' + 'http://hudanhidayat.com/' + category + '/' + item.id) %>"
                        target="_blank"
                        class="w-8 h-8 rounded-full bg-green-500 text-white flex items-center justify-center hover:bg-green-600 transition"
                        title="Share on WhatsApp">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            viewBox="0 0 16 16">
                            <path
                                d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592z" />
                        </svg>
                    </a>

                    <!-- Facebook -->
                    <a href="https://www.facebook.com/sharer/sharer.php?u=<%= encodeURIComponent('http://hudanhidayat.com/' + category + '/' + item.id) %>"
                        target="_blank"
                        class="w-8 h-8 rounded-full bg-blue-600 text-white flex items-center justify-center hover:bg-blue-700 transition"
                        title="Share on Facebook">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            viewBox="0 0 16 16">
                            <path
                                d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z" />
                        </svg>
                    </a>

                    <!-- Twitter/X -->
                    <a href="https://twitter.com/intent/tweet?text=<%= encodeURIComponent(item.title) %>&url=<%= encodeURIComponent('http://hudanhidayat.com/' + category + '/' + item.id) %>"
                        target="_blank"
                        class="w-8 h-8 rounded-full bg-black text-white flex items-center justify-center hover:bg-gray-800 transition"
                        title="Share on X">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor"
                            viewBox="0 0 16 16">
                            <path
                                d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z" />
                        </svg>
                    </a>
                </div>
            </div>

            <% if (item.image_url) { %>
                <div class="w-full mb-10 overflow-hidden rounded shadow-sm">
                    <img src="<%= item.image_url %>" alt="<%= item.title %>" class="w-full h-auto object-cover">
                </div>
                <% } %>

                    <div
                        class="prose prose-lg md:prose-xl max-w-none text-gray-700 font-serif leading-relaxed text-justify">
                        <%- item.content %>
                    </div>

        </article>

        <!-- Back Button -->
        <div class="border-t border-gray-200 pt-8 mt-12">
            <a href="/<%= category %>"
                class="inline-flex items-center text-salihara-red hover:underline font-bold uppercase tracking-widest text-xs">
                <span class="mr-2">&larr;</span> Back to <%= categoryTitle %>
            </a>
        </div>

    </main>

    <%- include('partials/footer') %>